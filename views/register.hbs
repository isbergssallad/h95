<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>H95</title>
    <link rel="stylesheet" href="css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
    <div class="container justify-content-center align-items-center mt-2">
        <div class="">
            {{!-- Handlebars partials för navbar --}}
            {{> nav}}
            <div class="login-container d-flex justify-content-center flex-column gap-3">
                <h4 class="form-title">REGISTER</h4>
                {{!-- Kör script för valideringen när formen skickas/submit --}}
                <form id="reg-form" action="/auth/register" method="POST" onsubmit="validateForm(event)">
                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="text" class="form-control" id="username-reg" name="username" required="required"
                            placeholder="Username">
                    </div>

                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="password" class="form-control" id="password-reg" name="password"
                            placeholder="8 characters minimum. Uppercase and lowercase letters, and special character."
                            required="required">
                    </div>

                    <div data-mdb-input-init class="form-outline mb-4">
                        <input type="password" class="form-control" id="password-conf-reg" name="password_confirm"
                            placeholder="Confirm password" required="required">
                    </div>
                    <button type="submit" data-mdb-button-init data-mdb-ripple-init
                        class="btn btn-primary btn-block mb-4 w-100">Register</button>
                        <p class="d-flex justify-content-center gap-1">By creating an account you accept the <a href="/terms" class="redirect">Terms &amp; Conditions</a></p>
                </form>
                <p>Already have an account? <a href="/login" class="redirect">Login</a></p>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script>
        //Script för att validera lösenord som skrivs in innan det skickas vidare till backend
        function validateForm(event) {
            // Förhindra att formuläret skickas vidare
            event.preventDefault();

            // Hämta värden från formuläret
            const password = document.getElementById("password-reg").value;
            const passwordConf = document.getElementById("password-conf-reg").value;

            // Om lösenorden inte matchar visas en alert
            if (password !== passwordConf) {
                alert("Password doesn't match.");
                return false;
            }
            else {
                // Om lösenorden matchar skickas formuläret vidare
                document.getElementById("reg-form").submit();
                return true;
            }
        }
    </script>
</body>

</html>